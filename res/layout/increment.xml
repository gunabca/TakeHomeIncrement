<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/itvnamecurrent"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="5dip"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:orientation="vertical" 
        android:layout_marginTop="5dip"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
                android:id="@+id/itvocincome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.50"
                android:text="@string/itvoincomename" />

            <EditText
                android:id="@+id/ietoincome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="number" 
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
                
                >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
                android:id="@+id/stvbasicpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/stvbasicpayname" />

            <EditText
                android:id="@+id/ietbasicpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:inputType="number" 
                
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
                
                />
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
             
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="@string/itvdeductionsname" />

            <EditText
                android:id="@+id/ietdeductions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:editable="false"
           
                android:inputType="number"
                 android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false" 
                
                
                 >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
                android:id="@+id/stvtakehomeafter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="@string/itvtakehomename" />

            <EditText
                android:id="@+id/iettakehome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:editable="false"
               android:focusableInTouchMode="false"
                android:inputType="number" 
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
      
                
                
                >
            </EditText>
        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/itvnamefuture" 
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dip"
        
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:orientation="vertical" 
        android:layout_marginTop="5dip"
        
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
                android:id="@+id/tvocincomeinc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.65"
                android:text="@string/tvocincomeincname" />

            <EditText
                android:id="@+id/ietoincomeinc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.35"
                android:inputType="number" 
                
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
                
                >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
                android:id="@+id/stvbasicpayinc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/stvbasicpayname" />

            <EditText
                android:id="@+id/ietbasicpayinc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:inputType="number" 
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
                
                
                />
        </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
             
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="@string/itvdeductionsincname" />

            <EditText
                android:id="@+id/ietdeductionsinc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:editable="false"
                            android:inputType="number"
                
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
                
                 >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:weightSum="3.0" >

            <TextView
                android:id="@+id/stvtakehomeafterinc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:text="@string/stvtakehomename" />

            <EditText
                android:id="@+id/iettakehomeinc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:editable="false"
              
                android:inputType="number"
                  android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
                
                 >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip"
        android:background="@drawable/shape3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itvincr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itvincrname"
            android:textStyle="bold"
            android:layout_marginLeft="16dip"
            android:layout_marginStart="16dip"
                        />

      <ImageButton 
         android:id="@+id/sbtdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_previous"
         android:contentDescription="Decrease"
        
        />

        <EditText
            android:id="@+id/ietincper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setincper" 
            android:inputType="number"
            android:editable="false"
              android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
       
            >
        </EditText>

     <ImageButton
        android:id="@+id/sbtinc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_next" 
        android:contentDescription="Increase"
        
        />
    </LinearLayout>

  
    
   

</LinearLayout>